@model IEnumerable<ProjetoV.Models.Pessoa>

@{
    ViewData["Title"] = "Pessoas";
}

<h1>Pessoas</h1>

<p>
    <a asp-action="NovaPessoa">
        <button class="botao-criar" type="submit">Cadastrar Pessoa</button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PessoaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PessoaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="td-botoes">
                    <a asp-action="AtualizarPessoa" asp-route-pessoaId="@item.PessoaId">
                        <button class="botao-editar" type="submit">Atualizar</button>
                    </a>

                    <form asp-action="ExcluirPessoa" asp-route-pessoaId="@item.PessoaId">
                        <button type="submit" class="botao-excluir">Excluir</button>
                    </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@* --- Estilo dos botões --- *@
<style>
    .botao-editar, .botao-excluir, .botao-criar {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
        transition-duration: 0.3s;
    }

        .botao-criar:hover {
            background-color: #2fa597;
        }

        .botao-editar:hover {
            background-color: #3e8e41;
        }

        .botao-excluir:hover {
            background-color: #f44336;
        }
</style>